# Model configuration
model_config: configs/models/multigriddet_darknet.yaml

# Dataset paths
data:
  train_annotation: data/coco_train2017_test.txt
  val_annotation: data/coco_val2017_test.txt
  classes_path: configs/coco_classes.txt
  
# Training parameters - MINIMAL FOR TESTING
training:
  batch_size: 1          # Minimal batch size for speed
  epochs: 1              # Just 1 epoch for testing
  initial_epoch: 0
  learning_rate: 0.001
  
  # Two-stage training - DISABLED FOR TESTING
  transfer_epochs: 0     # Skip two-stage training
  freeze_level: 0        # No freezing
  
  # Loss configuration
  loss_option: 2         # 1=IoL-MSE, 2=IoL-MSE+mask, 3=GIoU/DIoU
  label_smoothing: 0.0
  elim_grid_sense: false
  
  # Loss normalization strategy (default: batch normalization)
  # Options: ["batch"], ["positives"], ["grid"], or combinations like ["batch", "grid"]
  loss_normalization: ["batch"]
  
  # Data augmentation - DISABLED FOR TESTING
  augmentation:
    enabled: false       # Disable augmentation for speed
    enhance_type: null
    rescale_interval: -1  # Disable multi-scale
  
  # Multi-anchor assignment
  multi_anchor_assign: false
  
# Optimizer
optimizer:
  type: adam
  learning_rate: 0.001
  decay: 0.0005
  
# Learning rate schedule
lr_schedule:
  type: reduce_on_plateau
  factor: 0.5
  patience: 3
  min_lr: 1.0e-7

# Callbacks
callbacks:
  checkpoint:
    save_best_only: true
    monitor: val_loss
    save_dir: logs/checkpoints
  tensorboard:
    log_dir: logs/tensorboard
  early_stopping:
    monitor: val_loss
    patience: 10
    
# Resume training
resume:
  enabled: false
  weights_path: null
  
# Output
output:
  log_dir: logs/training
  model_dir: trained_models
  save_frequency: 1  # Save every N epochs
